import com.sun.org.apache.xalan.internal.xsltc.compiler.Import;

package com.settinghead.wexpression.business

import com.settinghead.wexpression.dto.WordListItem
import com.settinghead.wexpression.Word
import org.springframework.flex.remoting.RemotingInclude
import org.springframework.flex.remoting.RemotingDestination

class WordListService {

	static transactional = true

	@RemotingInclude
	List<TaskListItem> getAllTasks() {
		return Task.findAll().collectAll {
			new TaskListItem(
			id: it.id,
			title: it.title
			)
		}
	}
}
