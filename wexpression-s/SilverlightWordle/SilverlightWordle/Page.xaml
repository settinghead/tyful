<UserControl x:Class="SilverlightWordle.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Canvas Background="Transparent" x:Name="LayoutRoot" Width="300" Height="150" Loaded="LayoutRoot_Loaded">
        <Canvas.RenderTransform>
            <TransformGroup>
                <ScaleTransform ScaleX="2" ScaleY="2" x:Name="Scale" />
                <TranslateTransform X="0" Y="0" x:Name="Translate" />
            </TransformGroup>
        </Canvas.RenderTransform>
        <TextBlock FontFamily="Fonts/Fonts.zip#Jokerman" />
    </Canvas>
</UserControl>
