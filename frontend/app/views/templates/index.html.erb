<h1>Listing templates</h1>
<%= link_to 'Create New Template', new_template_path %>

<ul>
	<% @templates.each do |template| %>
	<li>
		<%= link_to(image_tag(ENV['TEMPLATE_PREVIEW_URL']+template.uuid+'.png'), template) %>
		<%= link_to 'Destroy', template, confirm: 'Are you sure?', method: :delete %>
	</li>
	<% end %>
</ul>

