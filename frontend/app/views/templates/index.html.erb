
<%content_for :head do%>
	<link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
	<script type="text/javascript">
	$(document).ready(function(){
		$('#see-gallery').click(function(){
	        $('html,body').animate({scrollTop: $(".masonry-container").offset().top-$('#header-middle').outerHeight()},'slow');
		});
		
	});

	</script>
<%end%>


<%if @show_intro %>

<div class="row-fluid">
	<div class="span7">
		<div class="hero-unit">
			<h1>Create typography art from pictures.</h1>
			 <p>Option 1: <%= link_to 'Draw something', new_template_path, {:class=>'btn btn-primary btn-large'} %>, then create.</p>
			 <p>Option 2: <%= link_to 'Use a photo', new_template_path(:use_photo=>true), {:class=>'btn btn-primary btn-large'} %>, then create.</p>
			 <p>Option 3: <a id="see-gallery" href="#">Pick a template from gallery</a>, modify (or not), then create.</p>
		</div>
	</div>
	<div class="span5">
		<div class="well"></div>
	</div>
</div>

<%end%>

<div class="masonry-container" id="container">
	<% @templates.each do |template| %>
	<%=div_for template, :class=>'item box' do%>
	<div class="inner">	
		<%= link_to(image_tag(ENV['TEMPLATE_PREVIEW_URL']+template.uuid+'.png')+ '<h3>'.html_safe+template.name+'</h3>'.html_safe, template) %>
	<div class="label-area">
		by <%= link_to(template.user)%>
			<div class="tools">
			</div>

			 <div class="emote">
				<%=render(:partial => 'templates/emote', :layout => false, :object=>template, :as=>:template)%>
			</div>
			
			<%= link_to 'Edit', edit_template_path(template) %>
			
			<% if can? :manage, template %>
			<%= link_to 'X', template, confirm: 'Are you sure you want to delete this template?', method: :delete %>
			<% end %>

			
	</div>
	</div>

	<%end%>
	<% end %>
</div>