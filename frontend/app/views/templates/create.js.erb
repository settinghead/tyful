<%if(@template.save)%>
alert('Template successfully published.');
$('#modal').dialog('close');
window.editing = false;

<%else%>
if($('#new_template #template_name').val().length>0){
	$('#modal').dialog('close');
	
	setTimeout(function(){$('#new_template').submit();},2000);
}
else {
	$('#modal').dialog({title:'Saving template', width: 500});
	window.editing = true;
}
<%end%>