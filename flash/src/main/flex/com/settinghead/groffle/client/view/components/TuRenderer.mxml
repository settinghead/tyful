			private var newTu:Boolean = false;
			
			[Bindable] public function set tu(_tu:TuVO):void{
				if(this._tu!=null)
					this._tu.removeEventListener(TuVO.FAILURE_COUNT_CHANGED, failureCountChanged);
				this._tu = _tu;
				this._tu.addEventListener(TuVO.FAILURE_COUNT_CHANGED,failureCountChanged);
				perseveranceMeter.setProgress(0,tu.template.perseverance);

				newTu = true;
				if(this.loaded)
					prepareForTu();
			}
			
			
			protected function failureCountChanged(event:Event):void{
				this.perseveranceMeter.setProgress(
					perseveranceMeter.value<tu.failureCount?tu.failureCount:perseveranceMeter.value
					,tu.template.perseverance);
			}
			
			private var loaded:Boolean = false;
			protected function onCreationCompleteHandler(event:FlexEvent):void
			{
				if(CookieUtil.getCookie("autoPostToFacebook")!=null){
					autoPostToFacebook = CookieUtil.getCookie("autoPostToFacebook")=="true"?true:false;
				}
				else{
					var mode:String = decodeURIComponent(FlexGlobals.topLevelApplication.parameters.mode) as String;

					if(mode!=ApplicationFacade.MODE_NEW_TEMPLATE)
						autoPostToFacebook = true;
					else
						autoPostToFacebook = false;	
				}
				
				if(newTu && this.tu!=null){
					prepareForTu();
				}
				
				this.loaded = true;
			}
			
			private var preparing:Boolean = false;
			private var dict:Dictionary;
			
			private function prepareForTu():void{
				if(!preparing){
					preparing = true;
					
					while(this.backgroundLayer.numChildren>0) 
						this.backgroundLayer.removeChildAt(0);
					while(this.wordLayers.numChildren>0)
						this.wordLayers.removeChildAt(0);
					_tu.template.generateEffectiveBorder();
					
					//adjust for effective border
					this.mainCanvas.width = _tu.template.effectiveBorder.width+EFFECTIVE_MARGIN;
					this.mainCanvas.height = _tu.template.effectiveBorder.height+EFFECTIVE_MARGIN;
					
					var stageScale:Number = (this.stage.width-150)/(this.stage.height-controlGroup.height);
					var tuScale:Number = this.tu.effectiveBorder.width/this.tu.effectiveBorder.height;
					var scale:Number;
					if(stageScale>tuScale){
						scale = (this.stage.height-controlGroup.height-100)/tu.effectiveBorder.height;
					}else{
						scale = (this.stage.width-250)/tu.effectiveBorder.width;

					}
					
					if(scale>3) scale = 3;
										
					mainCanvas.scaleX = scale;
					mainCanvas.scaleY = scale;
					
					Notification.show("stage w: "+(this.stage.width-150).toString()
						+"; stage h:"+(this.stage.height-this.controlGroup.height).toString()
						+"; tu w:" + this.tu.effectiveBorder.width.toString()
						+"; tu h:" + this.tu.effectiveBorder.height.toString()+"; scale:"+scale.toString());
					
//					var offsetX:int = -(this.stage.width-150-tu.effectiveBorder.width*scale)/2;
//					var offsetY:int = -(this.stage.height-this.controlGroup.height-tu.effectiveBorder.height*scale)/2;
					
					
					this.mainCanvas.left = -(_tu.template.effectiveBorder.x+EFFECTIVE_MARGIN)*scale;
					this.mainCanvas.top = -(_tu.template.effectiveBorder.y+EFFECTIVE_MARGIN)*scale;
//					Notification.show(
//						scale.toString());
					dict = new Dictionary();
					
					for each(var l:Layer in _tu.template.layers){
						var lc:UIComponent = new UIComponent();
						lc.top = lc.left = lc.bottom = lc.right = 0;
						dict[l] = lc;
						if(l is ImageLayer){
							lc.graphics.beginBitmapFill((l as ImageLayer).image);
							lc.graphics.drawRect(0,0,l.getWidth(), l.getHeight());
						}
						wordLayers.addChild(lc);
					}
					
//					for each(var displayWord:DisplayWordVO in _tu.dWords)
//					this.slapWord(displayWord);
					
					//				patchLayer.patchQueue=this._tu.template.patchIndex.map.getQueue(3);
					
					newTu = false;
					preparing = false;
				}	
			}
			
