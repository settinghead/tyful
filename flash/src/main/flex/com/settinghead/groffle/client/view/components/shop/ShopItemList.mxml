<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" creationComplete="group1_creationCompleteHandler(event)" >
	<fx:Metadata>
		[Event(name="ProcessShopClick", type="com.settinghead.groffle.client.view.components.shop.ShopClickEvent")]

	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			[Bindable] public var list:ArrayCollection;

			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				listControl.addEventListener(ShopItemRenderer.PROCESS_SHOP_CLICK,processShopClick,false,0,true);
			}
			
			private function processShopClick(e:ShopClickEvent):void{
				this.dispatchEvent(e.clone());
			}
			
		]]>
	</fx:Script>
	<s:filters>
		<s:DropShadowFilter 
			blurX="10" blurY="10" 
			alpha="0.32" 
			distance="5" 
			angle="90"                 
			/>
	</s:filters>
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	<s:Label text="Make a gift with your artwork" left="0" right="0" width="100%" />
	<s:DataGroup dataProvider="{list}" id="listControl" 
				 itemRenderer="com.settinghead.groffle.client.view.components.shop.ShopItemRenderer" 
				 width="100%" height="100%"
				 >
		<s:layout>
			<s:TileLayout orientation="columns" clipAndEnableScrolling="true" horizontalAlign="center"  />
		</s:layout>
	</s:DataGroup>
</s:Group>
