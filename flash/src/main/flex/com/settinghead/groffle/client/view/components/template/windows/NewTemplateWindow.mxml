<?xml version="1.0"?>
<!-- containers\spark\myComponents\MyLoginForm.mxml -->
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   close="handleCloseEvent();">
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	
	<fx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			
			[bindable]
			public var newWidth:int;
			[bindable]
			public var newHeight:int;
			
			// Handle the close button and Cancel button.
			private function handleCloseEvent():void {
				PopUpManager.removePopUp(this);
			}            
			
			// Handle the OK button.
			private function createTemplate():void {
				// Check credentials (not shown) then remove pop up.
				
				PopUpManager.removePopUp(this);
			}
		]]>
	</fx:Script>
	
	<s:Form>
		<s:FormItem label="Width">
			<s:NumericStepper id="widthStepper" value="{newWidth}"/>
		</s:FormItem>
		<s:FormItem label="Height">
			<s:NumericStepper id="heightStepper" value="{newHeight}"/>
		</s:FormItem>
	</s:Form>
	<s:HGroup> 
		<s:Button label="Create Template"
				  click="createTemplate();" /> 
	</s:HGroup> 
</s:TitleWindow>
