<?xml version="1.0"?>
<!-- containers\spark\myComponents\MyLoginForm.mxml -->
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   close="handleCloseEvent();" title="Create a new template">
	<fx:Metadata>
		[Event(name="createTemplate", type="com.settinghead.groffle.client.view.components.template.CreateTemplateEvent")]
	</fx:Metadata>
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import com.settinghead.groffle.client.view.components.template.CreateTemplateEvent;
			
			import mx.managers.PopUpManager;
			[Bindable]
			public var newWidth:int;
			[Bindable]
			public var newHeight:int;
			public const CREATE_TEMPLATE:String="createTemplate";
			
			// Handle the close button and Cancel button.
			private function handleCloseEvent():void {
				PopUpManager.removePopUp(this);
			}            
			
			// Handle the OK button.
			private function createTemplate():void {
				this.dispatchEvent(new CreateTemplateEvent(CREATE_TEMPLATE,widthStepper.value, heightStepper.value));
				PopUpManager.removePopUp(this);
			}
		]]>
	</fx:Script>
	
	<s:Form>
		<s:FormItem label="Width">
			<s:NumericStepper id="widthStepper" value="@{newWidth}" maximum="10000" minimum="10"/>
		</s:FormItem>
		<s:FormItem label="Height">
			<s:NumericStepper id="heightStepper" value="@{newHeight}" maximum="10000" minimum="10"/>
		</s:FormItem>
	</s:Form>
	<s:HGroup> 
		<s:Button label="Create Template"
				  click="createTemplate();" /> 
	</s:HGroup> 
</s:TitleWindow>
