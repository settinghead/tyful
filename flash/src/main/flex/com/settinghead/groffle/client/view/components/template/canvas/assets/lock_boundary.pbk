<languageVersion : 1.0;>

kernel lock_boundary
<   namespace : "com.settinghead";
    vendor : "Settinghead";
    version : 1;
>
{
    input image4 background;
    input image4 foreground;
    output pixel4 dst;

    void
    evaluatePixel()
    {
        float4 f = sampleNearest(foreground,outCoord());
        float4 b = sampleNearest(background,outCoord());
 
        dst =  float4(f[0],f[1],f[2],b[3]);
    }
}
