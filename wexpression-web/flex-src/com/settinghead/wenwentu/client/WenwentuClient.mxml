<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:debugger="com.demonsters.debugger.*" 
			   minWidth="955" minHeight="600"
			   creationComplete="facade.startup(this);" 
			   xmlns:components="com.settinghead.wenwentu.client.view.components.*" 
			   xmlns:client="com.settinghead.wenwentu.client.*"
			   >
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			private var facade:ApplicationFacade = ApplicationFacade.getInstance();
		]]>
	</fx:Script>
	<mx:ApplicationControlBar verticalAlign="middle" dock="true">
		<mx:Text text="Wenwentu" fontFamily="Verdana" fontSize="22" fontStyle="normal" color="#0559CC"/>
		<mx:Label fontWeight="bold" text="Create typography-based art."/>
	</mx:ApplicationControlBar>
	
	<s:Panel id="p" title="Drawing Pad" horizontalCenter="0" width="100%" height="100%">
		<mx:TabNavigator top="5" width="100%" height="100%" horizontalCenter="0">
			<s:NavigatorContent width="100%" height="100%" label="Templates?">
				<components:TemplateList id="templateList" right="0" top="0" bottom="0" width="150">
				</components:TemplateList>
				<components:TemplateRenderer id="templateRenderer" left="0" right="150" top="0"
											 bottom="0"/>		
			</s:NavigatorContent>
		</mx:TabNavigator>
	</s:Panel>
	
	<debugger:MonsterDebuggerFlex id="monsterDebugger"/>

</s:Application>
